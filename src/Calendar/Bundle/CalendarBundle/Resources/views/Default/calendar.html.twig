{% extends "CalendarCalendarBundle::index.html.twig" %}

{% block content %}
    <header class="jumbotron subhead">
        <div class="container">
            <h1>Calendar</h1>

            <p class="lead">Calendar test</p>
        </div>
        <div><a href="{{ path('logout') }}" class="btn pull-right">Log out</a></div>
    </header>
    <div class="container">
        <div id="calendar"></div>
        <div id='eventDialog' class="modal hide fade">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Add event</h3>
            </div>
            <div class="modal-body">
                <form>
                    <div class="control-group">
                        <label class="control-label">Title:</label>
                        <input id='title' class="field" type="text" placeholder="Title" autocomplete="off"/>
                    </div>
                    <div id="startDate" class="input-append date">
                        <label>Start date:</label>
                        <input readonly="" type="text" autocomplete="off"/>
                                <span class="add-on">
                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                                </span>
                    </div>
                    <div id="endDate" class="input-append date">
                        <label>End date:</label>
                        <input readonly="" type="text" autocomplete="off"/>
                                <span class="add-on">
                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                                </span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a data-dismiss="modal" href="#" class="btn">Close</a>
                <a id="save_event" href="#" class="btn btn-primary">Save</a>
            </div>
        </div>
    </div>
{% endblock %}